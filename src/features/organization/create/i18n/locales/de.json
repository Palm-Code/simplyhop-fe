{
  "title": "Unternehmensregistrierung",
  "company_data": {
    "title": "Unternehmensdaten",
    "form": {
      "input": {
        "company_type": {
          "label": "Identifier",
          "required": true,
          "items": [
            {
              "id": "domain",
              "name": "Domain",
              "description": "Das Unternehmen verwendet seine Domain (@company.com) für die Registrierung von Mitglieder"
            },
            {
              "id": "company_code",
              "name": "Unternehmenscode",
              "description": "Das Unternehmen verwendet einen eindeutigen Code, um die Registrierung von Mitgliedern zu identifizieren."
            }
          ]
        },
        "domain": {
          "inputProps": {
            "id": "domain",
            "placeholder": " "
          },
          "labelProps": {
            "id": "domain",
            "children": "Domain",
            "required": true
          }
        },
        "company_code": {
          "label": "Unternehmenscode",
          "cta": {
            "children": "Unternehmenscode generieren"
          }
        },
        "admin_email": {
          "inputProps": {
            "id": "admin_email",
            "placeholder": " "
          },
          "labelProps": {
            "id": "admin_email",
            "children": "Admin Email",
            "required": true
          }
        },
        "company_name": {
          "inputProps": {
            "id": "company_name",
            "placeholder": " "
          },
          "labelProps": {
            "id": "company_name",
            "children": "Firmenname",
            "required": true
          }
        },
        "telephone": {
          "inputProps": {
            "id": "telephone",
            "placeholder": " "
          },
          "labelProps": {
            "id": "telephone",
            "children": "Telefon",
            "required": true
          }
        },
        "responsible_person": {
          "title": "Verantwortliche Person",
          "first_name": {
            "inputProps": {
              "id": "first_name",
              "placeholder": " "
            },
            "labelProps": {
              "id": "first_name",
              "children": "Vorname",
              "required": true
            }
          },
          "last_name": {
            "inputProps": {
              "id": "last_name",
              "placeholder": " "
            },
            "labelProps": {
              "id": "last_name",
              "children": "Nachname",
              "required": true
            }
          }
        }
      }
    }
  },
  "company_office": {
    "title": "Unternehmensbüro",
    "cta": {
      "add": {
        "children": "Weitere Büros hinzufügen"
      }
    },
    "form": {
      "input": {
        "address_name": {
          "inputProps": {
            "id": "address_name",
            "placeholder": " ",
            "helperText": "Sie können bei der Auswahl des Standorts als Benutzerkennung beispielsweise „Hauptsitz, Büro 1” hinzufügen."
          },
          "labelProps": {
            "id": "address_name",
            "children": "Adresse Name",
            "required": true
          }
        },
        "address_1": {
          "inputProps": {
            "id": "address_1",
            "placeholder": " "
          },
          "labelProps": {
            "id": "address_1",
            "children": "Adresse",
            "required": true
          }
        },
        "address_2": {
          "inputProps": {
            "id": "address_2",
            "placeholder": " "
          },
          "labelProps": {
            "id": "address_2",
            "children": "Adresse (Zeile 2)",
            "required": false
          }
        },
        "zip_code": {
          "inputProps": {
            "id": "zip_code",
            "placeholder": " "
          },
          "labelProps": {
            "id": "zip_code",
            "children": "PLZ",
            "required": true
          }
        },
        "city": {
          "inputProps": {
            "id": "city",
            "placeholder": " "
          },
          "labelProps": {
            "id": "city",
            "children": "Stadt",
            "required": true
          }
        }
      }
    }
  },
  "cta": {
    "save": {
      "children": "Speichern"
    },
    "back": {
      "name": "back",
      "href": "/support/organisation"
    }
  },
  "notification": {
    "title": "Willkommen bei SimplyHop!",
    "description": "Das Unternehmenskonto ist bereit. Bitten Sie den Unternehmensadministrator, sich anzumelden und mit der Verwaltung seiner Fahrer und Fahrten zu beginnen.",
    "cta": {
      "back": {
        "children": "Continue"
      }
    }
  },
  "pin_point": {
    "title": "Den Standort markieren",
    "cta": {
      "back": {
        "children": "Continue"
      }
    },
    "map": {
      "marker": {
        "origin": {
          "icon": {
            "url": "/icons/map/start_point.svg"
          }
        },
        "destination": {
          "icon": {
            "url": "/icons/map/end_point.svg"
          }
        }
      },
      "info_window": {
        "origin": {
          "title": "Start"
        },
        "destination": {
          "title": "End"
        }
      },
      "polyline": {
        "strokeColor": "#33CC33",
        "strokeOpacity": 0.8,
        "strokeWeight": 8
      }
    }
  }
}
